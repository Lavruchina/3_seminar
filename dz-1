int a ;
int b ;
int c ;

a=Convert.ToInt32(Console.ReadLine());
b=Convert.ToInt32(Console.ReadLine());
c=Convert.ToInt32(Console.ReadLine());
if (a>b)
{
    if(a>c)
    {   
    Console.WriteLine("{0} наибольшее число", a);
    }
    else
    {
      Console.WriteLine("{0} наибольшее число", c);  
    }
}
else if(b>c)
{
    Console.WriteLine("{0} наибольшее число", b);
}
else
{
   Console.WriteLine("{0} наибольшее число", c);  
}  
Console.ReadLine();


// Задача №3. Напишите программу, которая на выход принимает число и выдаёт, является ли число  чётным (делится ли оно на два без остатка);

Console.Write(" Введите число: ") ;
int a ;
int b;

a=Convert.ToInt32(Console.ReadLine());

b=a%2;
if (b==0)
{
    
    Console.WriteLine("{0} четное число", a);
}
    else
    {
      Console.WriteLine("{0} нечетное число", a);  
    }
 
Console.ReadLine();


